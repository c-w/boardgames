{
  "name": "fitf",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@azure/identity": "^1.0.2",
    "@azure/storage-blob": "^12.1.1",
    "bgio-azure-storage": "^0.0.2",
    "boardgame.io": "^0.39.11",
    "envalid": "^6.0.1",
    "koa": "^2.11.0",
    "koa-static": "^5.0.0",
    "node-persist": "^3.0.5"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.0",
    "@babel/node": "^7.8.7",
    "@babel/preset-env": "^7.9.5",
    "@rjsf/core": "^2.0.1",
    "@use-hooks/interval": "^1.0.1",
    "axios": "^0.19.2",
    "cross-env": "^7.0.2",
    "eslint": "^6.8.0",
    "http-proxy-middleware": "^1.0.3",
    "nodemon": "^2.0.3",
    "npm-run-all": "^4.1.5",
    "react": "^16.13.1",
    "react-copy-to-clipboard": "^5.0.2",
    "react-dom": "^16.13.1",
    "react-router-dom": "^5.1.2",
    "react-scripts": "3.4.1",
    "shx": "^0.3.2"
  },
  "scripts": {
    "prestart": "yarn run ensure-env",
    "start": "run-p start-client start-server",
    "start-client": "cross-env PORT=3000 react-scripts start",
    "start-server": "cross-env PORT=8000 nodemon --exec babel-node src/backend/server.js",
    "ensure-env": "shx cp -n .env.example .env",
    "lint": "eslint --max-warnings=0 src",
    "build-client": "react-scripts build",
    "build-server": "babel src --ignore src/frontend --ignore src/index.js --ignore src/setupProxy.js --out-dir dist",
    "prebuild": "yarn run ensure-env",
    "build": "run-p build-client build-server"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  },
  "nodemonConfig": {
    "watch": [
      "src/backend",
      "src/shared"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
