{
  "name": "boardgames",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@azure/identity": "^1.0.2",
    "@azure/storage-blob": "^12.1.1",
    "bgio-azure-storage": "^0.1.0",
    "boardgame.io": "^0.41.0",
    "envalid": "^6.0.1",
    "koa": "^2.11.0",
    "koa-static": "^5.0.0",
    "node-persist": "^3.0.5"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.0",
    "@babel/node": "^7.8.7",
    "@babel/preset-env": "^7.9.5",
    "@craco/craco": "^5.7.0",
    "@rjsf/core": "^2.0.1",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "@types/classnames": "^2.2.10",
    "@types/jest": "^26.0.14",
    "@types/koa": "^2.11.4",
    "@types/koa-router": "^7.4.1",
    "@types/koa-static": "^4.0.1",
    "@types/node": "^14.11.8",
    "@types/react": "^16.9.52",
    "@types/react-dom": "^16.9.8",
    "@types/react-router-dom": "^5.1.6",
    "@use-hooks/interval": "^1.0.1",
    "classnames": "^2.2.6",
    "craco-plugin-scoped-css": "^1.1.0",
    "cross-env": "^7.0.2",
    "eslint": "^6.8.0",
    "html-loader": "^1.3.2",
    "http-proxy-middleware": "^1.0.3",
    "husky": "^4.3.0",
    "markdown-loader": "^6.0.0",
    "marked": "^1.2.2",
    "node-sass": "^4.14.1",
    "nodemon": "^2.0.3",
    "normalize-scss": "^7.0.1",
    "npm-run-all": "^4.1.5",
    "react": "^16.13.1",
    "react-copy-to-clipboard": "^5.0.2",
    "react-dom": "^16.13.1",
    "react-helmet": "^6.1.0",
    "react-router-dom": "^5.1.2",
    "react-scripts": "3.4.1",
    "shx": "^0.3.2",
    "stylelint": "^13.7.2",
    "stylelint-config-recommended": "^3.0.0",
    "typescript": "^4.0.3"
  },
  "scripts": {
    "prestart": "yarn run ensure-env",
    "start": "run-p start-client start-server",
    "start-client": "cross-env PORT=3000 craco start",
    "start-server": "cross-env PORT=8000 nodemon --exec babel-node src/backend/server.js",
    "ensure-env": "shx cp -n .env.example .env",
    "lint-eslint": "eslint --max-warnings=0 src",
    "lint-style": "stylelint \"src/**/*.{css,scss}\"",
    "lint-tsc": "tsc",
    "lint": "run-p lint-eslint lint-style lint-tsc",
    "test": "cross-env CI=true craco test --env=node",
    "build-client": "craco build",
    "build-server": "babel src --out-dir dist",
    "prebuild": "yarn run ensure-env",
    "build": "run-p build-client build-server"
  },
  "eslintConfig": {
    "extends": "react-app",
    "rules": {
      "no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_"
        }
      ]
    }
  },
  "stylelint": {
    "extends": [
      "stylelint-config-recommended"
    ],
    "rules": {
      "at-rule-no-unknown": [
        true,
        {
          "ignoreAtRules": [
            "include",
            "mixin"
          ]
        }
      ]
    }
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ],
    "ignore": [
      "src/frontend",
      "src/index.js",
      "src/setupProxy.js",
      "src/**/*.test.js"
    ]
  },
  "nodemonConfig": {
    "watch": [
      "src/backend",
      "src/shared"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn run lint",
      "pre-push": "yarn run test"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
