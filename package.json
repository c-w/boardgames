{
  "name": "fitf",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "boardgame.io": "^0.39.7",
    "envalid": "^6.0.1",
    "koa-static": "^5.0.0",
    "node-persist": "^3.0.5"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.0",
    "@babel/node": "^7.8.7",
    "@babel/preset-env": "^7.9.5",
    "axios": "^0.19.2",
    "concurrently": "^5.1.0",
    "cross-env": "^7.0.2",
    "eslint": "^6.8.0",
    "nodemon": "^2.0.3",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-router-dom": "^5.1.2",
    "react-scripts": "3.4.1"
  },
  "scripts": {
    "start": "concurrently \"npm:start-client\" \"npm:start-server\"",
    "start-client": "cross-env REACT_APP_SERVER_URL=http://localhost:8000 react-scripts start",
    "start-server": "cross-env STATE_DIR=state PORT=8000 nodemon --exec babel-node src/backend/server.js",
    "lint": "eslint --max-warnings=0 src",
    "build-client": "react-scripts build",
    "build-server": "babel src --ignore src/frontend --ignore src/index.js --out-dir dist",
    "build": "concurrently \"npm:build-client\" \"npm:build-server\""
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  },
  "nodemonConfig": {
    "watch": [
      "src/backend",
      "src/shared"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
