{
  "name": "fitf",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "boardgame.io": "^0.39.7",
    "envalid": "^6.0.1",
    "esm": "^3.2.25",
    "node-persist": "^3.0.5"
  },
  "devDependencies": {
    "axios": "^0.19.2",
    "concurrently": "^5.1.0",
    "cross-env": "^7.0.2",
    "nodemon": "^2.0.3",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-router-dom": "^5.1.2",
    "react-scripts": "3.4.1"
  },
  "scripts": {
    "start": "concurrently \"npm:start-client\" \"npm:start-server\"",
    "start-client": "cross-env REACT_APP_SERVER_URL=http://localhost:8000 react-scripts start",
    "start-server": "cross-env STATE_DIR=state PORT=8000 nodemon -r esm src/server.js",
    "build": "react-scripts build"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "nodemonConfig": {
    "watch": [
      "src/server.js",
      "src/game.js",
      "src/utils.js"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
